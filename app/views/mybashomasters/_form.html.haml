= javascript_include_tag 'mybashomasters/form'
= simple_form_for @mybashomaster do |f|
  .col-md-2.col-xs-2.col-sm-2.col-lg-2.col-md-offset-1.col-xs-offset-1.col-sm-offset-1.col-lg-offset-1
    = f.association :shainmaster, label_method: :氏名, value_method: :社員番号, label:'社員番号' if mode == :new
    //= f.input :社員番号 if mode == :new
    = f.input :場所コード if mode == :new
    = f.input :場所名
    = f.input :場所名カナ
    = f.input :SUB
    = f.association :bashokubunmst, label_method: :場所区分名, value_method: :場所区分コード, label:'場所区分'
    = f.input :会社コード, wrapper: :vertical_input_group, hint:"#{@mybashomaster.kaishamaster.try :会社名}", hint_html: {class: 'kaisha-name'} do
      = f.input_field :会社コード, class: 'form-control'
      %span.input-group-addon.refer-kaisha
        %span.glyphicon.glyphicon-search{'aria-hidden'=>"true"}
    = f.input :更新日, as: :hidden
    = f.button :submit, '更新する', class: 'btn btn-primary'

= render 'share/kaisha_modal'
