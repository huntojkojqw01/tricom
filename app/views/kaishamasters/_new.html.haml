.modal#kaisha-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel= (t 'title.new')
      .modal-body
        = simple_form_for :kaishamaster, url: kaishamasters_path, method: :post, :remote => true, html: { id: 'new_kaishamaster', role: :form, 'data-model' => 'kaishamaster'} do |f|
          = f.input :会社コード do
            = f.input_field :会社コード, class: 'form-control'
            .span.help-block
          = f.input :会社名 do
            = f.input_field :会社名, class: 'form-control'
            .span.help-block
          = f.input :備考 do
            = f.input_field :備考, class: 'form-control'
            .span.help-block
          = f.button :submit, class: 'btn btn-primary'