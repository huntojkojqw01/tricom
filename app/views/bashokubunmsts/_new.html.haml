.modal#bashokubunmst-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel= (t 'title.new')
      .modal-body
        = simple_form_for :bashokubunmst, url: bashokubunmsts_path, method: :post, :remote => true, html: { id: 'new_bashokubunmst', role: :form, 'data-model' => 'bashokubunmst'} do |f| 
          = f.input "場所区分コード" do
            = f.input_field :場所区分コード, class: 'form-control'
            .span.help-block
          = f.input "場所区分名" do
            = f.input_field :場所区分名, class: 'form-control'
            .span.help-block
          = f.button :submit, class: 'btn btn-primary'