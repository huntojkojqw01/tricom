model = 'jpt_holiday_mst'

$('form#new_' + model).clear_previous_errors()

<% if @jpt_holiday_mst.errors.any? %>
  $('form#new_' + model).render_form_errors(model, '<%=@jpt_holiday_mst.errors.messages.to_json.html_safe%>')
<% else %>
  $('#holiday-new-modal').modal('hide');
  $('#holiday_table').DataTable().row.add( [
    "<%=@jpt_holiday_mst.id%>",
    "<%=@jpt_holiday_mst.event_date.try(:strftime, '%Y/%m/%d')%>",
    "<%=@jpt_holiday_mst.title%>",
    "<%=@jpt_holiday_mst.description%>"
  ]).draw( false );
<% end %>
