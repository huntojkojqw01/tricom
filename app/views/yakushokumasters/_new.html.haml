.modal#yakushoku-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel= (t 'title.new')
      .modal-body
        = simple_form_for Yakushokumaster.new, url: yakushokumasters_path, method: :post, :remote => true, html: { role: :form, 'data-model' => 'yakushokumaster' } do |f|
          = f.input :役職コード do
            = f.input_field :役職コード, class: 'form-control'
            .span.help-block
          = f.input :役職名 do
            = f.input_field :役職名, class: 'form-control'
            .span.help-block
          = f.button :submit, class: 'btn btn-primary'