.modal#koutei-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel= (t 'title.new')
      .modal-body
        = simple_form_for :kouteimaster, url: kouteimasters_path, method: :post, :remote => true, html: { id: 'new_kouteimaster', role: :form, 'data-model' => 'kouteimaster' } do |f|
          = f.input :所属コード, label:'所属名' do
            = f.select :所属コード, Shozokumaster.pluck(:所属名, :所属コード), {}, { include_blank: true, class: 'form-control' }
            .span.help-block
          = f.input :工程コード do
            = f.input_field :工程コード, class: 'form-control'
            .span.help-block
          = f.input :工程名 do
            = f.input_field :工程名, class: 'form-control'
            .span.help-block
          = f.button :submit, class: 'btn btn-primary'