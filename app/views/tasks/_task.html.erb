<div class="panel panel-default" data-id="<%= task.id %>" id="task<%=task.id%>">
  <div class="panel-heading">
    <h3 class="panel-title" style="white-space: pre" id="title<%= task.id %>"><%= best_in_place task, :title, :as => :input, activator: '#title' + task.id.to_s,:classes => 'title-edit',:place_holder => "タイトル"%></h3>
  </div>
  <div class="panel-body" id="description<%= task.id %>" style="white-space: pre-line">
    <%= best_in_place task, :description, :as => :textarea, activator: '#description' + task.id.to_s,:place_holder => "内容"%>
  </div>
  <div class="panel-footer" align="right">
  	<% if task.done == 0%>
      <button class='btn btn-primary change-status' task-id='<%= task.id %>' type= 'button'><%= (t 'title.finished') %></button>
    <% elsif task.done == 1 %>
      <button class='btn btn-primary change-status' task-id='<%= task.id %>' type= 'button'><%= (t 'title.unfinished') %></button>
    <% end %>
    <span id='message_confirm_delete' hidden="true"><%=(t "app.delete_confirm")%></span>

    <button class='btn btn-primary destroy-task' id='<%= task.id %>' type= 'button'><%= (t 'title.delete') %></button>
  </div>
</div>
