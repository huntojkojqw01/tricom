<%= javascript_include_tag 'events/print_modal' %>
<div class="modal" id="print_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">印刷</h4>
      </div>
      <div class="modal-body" >
        <ul class="nav nav-tabs">
          <li class="active" id="modal_pdf_event"><a href="#"><%=(t 'app.label.pdf_event')%></a></li>
          <li id="modal_pdf_job"><a href="#"><%=(t 'app.label.pdf_event_job')%></a></li>
          <li id="modal_pdf_koutei"><a href="#"><%=(t 'app.label.pdf_event_koutei')%></a></li>
        </ul>
        <div id="modal_selectDay" >
          <div class="row spacer">
            <div class="col-md-4 col-xs-4 col-sm-4 col-lg-4 col-md-offset-1 col-xs-offset-1 col-sm-offset-1 col-lg-offset-1">
              <label>開始</label>
              <div class="input-group modal_date_start_select">
                <input type='text' class="form-control" id="modal_date_start_input" name="modal_date_start_input">
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar" id="icon_start" aria-hidden="true"></span>
                </span>
              </div>
            </div>
            <div class="col-md-4 col-xs-4 col-sm-4 col-lg-4 ">
              <label>終了</label>
              <div class="input-group modal_date_end_select">
                <input type='text' class="form-control" id="modal_date_end_input" name="dmodal_ate_end_input">
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar" id="icon_end" aria-hidden="true"></span>
                </span>
              </div>
            </div>
            <div class="col-md-1 col-xs-4 col-sm-4 col-lg-1">
              <label>&nbsp;</label>
              <div>
                <span id="print_pdf" class="btn btn-primary"><%=(t 'app.label.export_pdf')%></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
