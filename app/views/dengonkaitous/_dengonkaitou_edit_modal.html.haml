.modal#dengonkaitou-edit-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel Edit
      .modal-body
        = simple_form_for (Dengonkaitou.new), url: update_dengonkaitou_dengonkaitous_path, :remote => true, html: {role: :form, 'data-model' => 'dengonkaitou'} do |f| 
          = f.input :種類名, label: "種類名", class: 'form-control'
          = f.input "備考" do
            = f.input_field :備考, class: 'form-control'
            .span.help-block
          = f.button :submit, class: 'btn btn-primary'