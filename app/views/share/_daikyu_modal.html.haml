= javascript_include_tag 'share/daikyu_modal'
.modal#daikyu_search_modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel 代休相手日付選択
      .modal-body
        %table#daikyu_table.daikyutable.table.table-striped.table-bordered.table-hover{cellspacing: 0, width: '100%'}
          %thead
            %tr
              %th 代休相手日付
              %th ID
          %tbody
            - @daikyus.each do |daikyu|
              %tr
                %td= daikyu.日付.try(:strftime, "%Y/%m/%d")
                %td= daikyu.id
      .modal-footer
        %button.btn.btn-primary#daikyu_sentaku_ok{type: :button, 'data-dismiss'=>"modal"}　ＯＫ　
        %button.btn.btn-default{type: :button, 'data-dismiss'=>"modal"} 閉じる
