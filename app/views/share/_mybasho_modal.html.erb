          <tr>
            <th>社員番号</th>
            <th>場所コード</th>
            <th>場所名</th>
            <th>場所名カナ</th>
            <th>会社コード</th>
            <th>会社名</th>
            <th>更新日</th>
          </tr>
          </thead>

          <tbody>
          <% @mybashos.each do |mybasho| %>
              <tr>
                <td><%= mybasho.社員番号 %></td>
                <td><%= mybasho.場所コード %></td>
                <td><%= mybasho.場所名 %></td>
                <td><%= mybasho.場所名カナ %></td>
                <td><%= mybasho.会社コード %></td>
                <td><%= mybasho.kaisha_name %></td>
                <td><%= mybasho.updated_at %></td>

              </tr>
          <% end %>
          </tbody>
        </table>
